{
  "name": "template-ethereum-contracts",
  "version": "0.1.0",
  "description": "Template to develop ethereum smart contracts",
  "repository": "github:wighawag/template-ethereum-contracts",
  "author": "wighawag",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "keywords": [
    "ethereum",
    "smart-contracts",
    "template",
    "boilerplate",
    "hardhat",
    "solidity"
  ],
  "resolutions": {
    "websocket": "1.0.32"
  },
  "devDependencies": {
    "@codechecks/client": "^0.1.10",
    "@ethersproject/wallet": "^5.0.5",
    "@openzeppelin/contracts": "^3.2.1-solc-0.7",
    "chai": "^4.2.0",
    "chai-ethers": "^0.0.1",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-node": "^11.1.0",
    "ethers": "^5.0.17",
    "fs-extra": "^9.0.1",
    "hardhat": "^2.0.10",
    "hardhat-deploy": "^0.7.0-beta.44",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-gas-reporter": "^1.0.1",
    "mocha": "^8.1.1",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-alpha.57",
    "solhint": "^3.3.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.15"
  },
  "scripts": {
    "postinstall": "node ./.setup.mjs",
    "lint": "eslint \"**/*.{js}\" && solhint src/**/*.sol",
    "lint:fix": "eslint --fix \"**/*.{js}\" && solhint --fix src/**/*.sol",
    "format": "prettier --check \"**/*.{js,sol}\"",
    "format:fix": "prettier --write \"**/*.{js,sol}\"",
    "compile": "hardhat compile",
    "void:deploy": "hardhat deploy",
    "test": "cross-env HARDHAT_DEPLOY_FIXTURE=true HARDHAT_COMPILE=true mocha --bail --recursive test",
    "gas": "cross-env REPORT_GAS=true hardhat test",
    "coverage": "cross-env HARDHAT_DEPLOY_FIXTURE=true hardhat coverage",
    "dev": "hardhat node --reset --watch --export contractsInfo.json",
    "local:dev": "hardhat --network localhost deploy --watch",
    "local:deploy": "hardhat --network localhost deploy",
    "local:run": "cross-env HARDHAT_NETWORK=localhost node",
    "local:seed": "cross-env HARDHAT_NETWORK=localhost node scripts/seed.js",
    "local:export": "hardhat --network localhost export",
    "staging:deploy": "hardhat --network staging deploy",
    "staging:export": "hardhat --network staging export",
    "staging:run": "cross-env HARDHAT_NETWORK=staging node",
    "rinkeby:deploy": "hardhat --network rinkeby deploy",
    "rinkeby:export": "hardhat --network rinkeby export",
    "rinkeby:run": "cross-env HARDHAT_NETWORK=rinkeby node",
    "kovan:deploy": "hardhat --network kovan deploy",
    "kovan:export": "hardhat --network kovan export",
    "kovan:run": "cross-env HARDHAT_NETWORK=kovan node",
    "goerli:deploy": "hardhat --network goerli deploy",
    "goerli:export": "hardhat --network goerli export",
    "goerli:run": "cross-env HARDHAT_NETWORK=goerli node",
    "mainnet:deploy": "hardhat --network mainnet deploy",
    "mainnet:export": "hardhat --network mainnet export",
    "mainnet:run": "cross-env HARDHAT_NETWORK=mainnet node"
  }
}
